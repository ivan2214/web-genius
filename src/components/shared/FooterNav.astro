---
export interface Props {
  title: string
  navItems: {
    itemText: string
    itemLink: string
  }[]
}

const { title, navItems } = Astro.props
---

<nav class='space-y-6'>
  <h2 class='capitalze font-bold text-heading-1 text-xl'>
    {title}
  </h2>
  <ul class='space-y-3 font-medium md:text-base text-heading-3'>
    {
      navItems.map((navItem) => (
        <li>
          <a href={navItem.itemLink} class='transition hover:text-primary'>
            {navItem.itemText}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
